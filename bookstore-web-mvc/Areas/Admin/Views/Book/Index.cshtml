@model List<Book>;
<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">Book List Page</h2>
        </div>
        <div class="col-6 text-end"><a asp-controller="Book" asp-action="Upsert" class="btn btn-primary"><i
                    class="bi bi-plus-circle"></i> Create New Book </a></div>
    </div>

    <table class="table table-bordered table-stripped">
        <thead>
            <tr>
                <th>
                    Book Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Stock
                </th>
                <th>
                    Author
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Stock))
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Price</td>
                    <td>@obj.Stock</td>
                    <td>@obj.Author</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Book" asp-action="Upsert" asp-route-id="@obj.Id"
                                class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            @* <a asp-controller="Category" asp-action="View" class="btn btn-info mx-2"><i
                        class="bi bi-folder2-open"></i> View</a> *@
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.Id"
                                class="btn btn-danger mx-2"><i class="bi bi-file-earmark-x"></i> Delete</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>