@model Book


<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0 pb-2"></label>
            <input disabled asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0 pb-2"></label>
            <input disabled asp-for="Author" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0 pb-2"></label>
            <input disabled asp-for="Price" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Stock" class="p-0 pb-2"></label>
            <input disabled asp-for="Stock" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px">Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-outline-secondary"
            style="width: 150px">Cancel</a>
    </div>
</form>